<% provide(:title, @title) %>

<%= render 'layouts/park_tabs' %>

<br />

<h4>Autocompletion Tasks</h4>

<%= bootstrap_form_tag do |f| %>
  <%= f.submit 'Follow All 301 Redirects', class: "btn btn-success" %>
  <%= f.submit 'Fill Parks Where Catalogue Lacks Information', class: "btn btn-warning" %>
  <%= f.submit 'Fill Parks Where RVParky Lacks Information', class: "btn btn-warning" %>
  <%= f.submit 'Fill Parks Where Both Lack Information (If Possible)', class: "btn btn-warning" %>
  <%= f.submit 'Remove All Entries with Invalid Slugs', class: "btn btn-danger" %>
  <%= f.submit 'Remove All Entries with Invalid UUIDs', class: "btn btn-danger" %>
  <hr />
  <%= f.form_group do %>
    <%= f.check_box :catalogue_blank, label: "Fill Parks Where Catalogue Lacks Information" %>
    <%= f.check_box :rvparky_blank, label: "Fill Parks Where RVParky Lacks Information" %>
    <%= f.check_box :both_blank, label: "Fill Parks Where Both Lack Information (If Possible)" %>
    <%= f.check_box :invalid_slug, label: "Remove All Entries with Invalid Slugs" %>
    <%= f.check_box :invalid_uuid, label: "Remove All Entries with Invalid UUIDs" %>
  <% end %>
  <%= f.primary 'Perform Multiple Tasks' %>
<% end %>
