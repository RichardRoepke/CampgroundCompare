<% provide(:title, @title) %>

<%= render 'layouts/park_tabs' %>

<br />

<h4>Autocompletion Tasks</h4>

<%= bootstrap_form_tag do |f| %>
  <%= f.submit 'Follow All 301 Redirects', class: "btn btn-success" %>
  <%= f.submit 'Fill Parks Where Catalogue Lacks Information' %>
  <%= f.submit 'Fill Parks Where RVParky Lacks Information' %>
  <%= f.submit 'Fill Parks Where Both Lack Information (If Possible)' %>
  <hr />
  <%= f.form_group do %>
    <%= f.check_box :catalogue_blank, label: "Fill Parks Where Catalogue Lacks Information" %>
    <%= f.check_box :rvparky_blank, label: "Fill Parks Where RVParky Lacks Information" %>
    <%= f.check_box :both_blank, label: "Fill Parks Where Both Lack Information (If Possible)" %>
  <% end %>
  <%= f.submit 'Perform Multiple Tasks' %>
<% end %>
