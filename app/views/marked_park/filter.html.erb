<% provide(:title, @title) %>

<%= render 'layouts/park_tabs' %>

<br />

<%= bootstrap_form_tag do |f| %>
  <%= f.text_field :name, id: 'Filter Name', label: 'Name includes:' %>
  <%= f.check_box :name_exact, label: 'Exact?' %>
  <%= f.submit("Clear", type: 'button', data: { element: 'Filter Name', transfer: '', reset: 'true' }) %>
  <hr />
  <%= f.text_field :uuid, id: 'Filter UUID', label: 'UUID includes:' %>
  <%= f.check_box :uuid_exact, label: 'Exact?' %>
  <%= f.submit("Clear", type: 'button', data: { element: 'Filter UUID', transfer: '', reset: 'true' }) %>
  <hr />
  <%= f.text_field :slug, id: 'Filter Slug', label: 'Slug includes:' %>
  <%= f.check_box :slug_exact, label: 'Exact?' %>
  <%= f.submit("Clear", type: 'button', data: { element: 'Filter Slug', transfer: '', reset: 'true' }) %>
  <hr />
  <%= f.select :editable,
               [["No", 'FALSE'],
               ["Yes", 'TRUE']],
               { label: "Can resolve differences?",
                 include_blank: true },
               { class: "selectpicker" } %>
  <%= f.submit "Clear All", type: 'button', data: { global: '[data-reset]' } %>
  <%= f.submit 'Filter Parks' %>
<% end %>