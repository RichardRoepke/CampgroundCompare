<% provide(:title, @title) %>

<%= render 'layouts/park_tabs' %>

<br />

<h4> <%= @park.name %> </h4>

<%= @park.uuid + ' (' + @park.type + ')' %> <br />

<% if @park.alt_name.present?%>
  <%= 'Alternative Name: ' + @park.alt_name %>
  <br />
<% end %>

<% if @park.former_name.present?%>
  <%= 'Former Name: ' + @park.former_name %>
  <br />
<% end %>

<% if @park.bounce.present? %>
  <%= 'Bounce: ' + @park.bounce %>
  <br />
<% end %>

<%= 'Address: ' + @park.address + ', ' + @park.city + ', ' + @park.state + ' (' + @park.state_code + '), ' + @park.country + ' (' + @park.country_code + ')' %> <br />

<% if @park.phone.present? %>
  <%= 'Phone Number: ' + @park.phone%>
  <br />
<% end %>

<% if @park.email.present?%>
  <%= 'Email: ' + @park.email %>
  <br />
<% end %>

<% if @park.website.present?%>
  <%= 'Website: ' + @park.website %>
  <br />
<% end %>

<% if @park.latitude.present? && @park.longitude.present?%>
  <%= 'GPS Coordinates: (' + @park.latitude.to_s + ', ' + @park.longitude.to_s + ')' %>
  <br />
<% end %>

<% if @park.description.present?%>
  <%= 'Description: ' + @park.description %>
  <br />
<% end %>

<% if @park.description_short.present?%>
  <%= 'Short Description: ' + @park.description_short %>
  <br />
<% end %>

<% if @park.directions.present?%>
  <%= 'Directions: ' + @park.directions %>
  <br />
<% end %>

<% if @park.rating.present?%>
  <%= 'Rating: ' + @park.rating %>
  <br />
<% end %>

<br />

<div class="panel-group" id="accordion">
  <%= collapse_button_generator('Amenities') if @park.amenities.present? %>

  <%= collapse_button_generator('Cobrands') if @park.cobrands.present? %>

  <%= collapse_button_generator('Images') if @park.images.present? %>

  <%= collapse_button_generator('Memberships') if @park.memberships.present? %>

  <%= collapse_button_generator('Nearbies') if @park.nearbies.present? %>

  <%= collapse_button_generator('Payments') if @park.payments.present? %>

  <%= collapse_button_generator('Rates') if @park.rates.present? %>

  <%= collapse_button_generator('Reviews') if @park.reviews.present? %>

  <%= collapse_button_generator('Tags') if @park.tags.present? %>

  <%= collapse_generator('Amenities', generate_amenities_entry, @park.amenities) if @park.amenities.present? %>

  <%= collapse_generator('Cobrands', generate_cobrands_entry, @park.cobrands) if @park.cobrands.present? %>

  <%= collapse_generator('Images', generate_images_entry, @park.images) if @park.images.present? %>

  <%= collapse_generator('Memberships', generate_memberships_entry, @park.memberships) if @park.memberships.present? %>

  <%= collapse_generator('Nearbies', generate_nearbies_entry, @park.nearbies) if @park.nearbies.present? %>

  <%= collapse_generator('Payments', generate_payments_entry, @park.payments) if @park.payments.present? %>

  <%= collapse_generator('Rates', generate_rates_entry, @park.rates) if @park.rates.present? %>

  <%= collapse_generator('Reviews', generate_reviews_entry, @park.reviews) if @park.reviews.present? %>

  <%= collapse_generator('Tags', generate_tags_entry, @park.tags) if @park.tags.present? %>
</div>

<br />